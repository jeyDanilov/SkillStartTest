<?xml version="1.0" encoding="utf-8"?>




<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColorLoginScreen">

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="328dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:lineHeight="36dp"
        android:text="Вход"
        android:textColor="@color/textColorLogin"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/inputBlock"
        android:layout_width="360dp"
        android:layout_height="165dp"
        android:layout_marginTop="204dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/emailTextView"
            style="@style/ShapeAppearance.Material3.Corner.Medium"
            android:layout_width="41dp"
            android:layout_height="18dp"
            android:layout_marginBottom="10dp"
            android:text="Email"
            android:textColor="@color/textTitleMedium"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edit_text_background"
            android:hint="Введите email"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="@color/textColorEditText"
            android:textColorHint="@color/textTitleMedium"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="57dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Пароль"
            android:textColor="@color/textTitleMedium"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edit_text_background"
            android:hint="Введите пароль"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/textColorEditText"
            android:textColorHint="@color/textTitleMedium"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_corner_radius"
        android:text="Вход"
        android:clickable="true"
        android:textColor="@color/textTitleMedium"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputBlock" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonLogin">


        <TextView
            android:id="@+id/textViewNotAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нету аккаунта?"
            android:textColor="@color/textTitleMedium" />


        <TextView
            android:id="@+id/textViewReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Регистрация"
            android:textColor="@color/textColorRegAndFog" />

    </LinearLayout>

    <TextView
        android:id="@+id/texviewForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Забыл пароль"
        android:textColor="@color/textColorRegAndFog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <LinearLayout
        android:id="@+id/linearLine"
        android:layout_width="323dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="@color/linearLineColor"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texviewForgotPass" />


    <LinearLayout
        android:id="@+id/linearLayoutLogin"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLine">


        <ImageButton
            android:id="@+id/buttonVk"
            android:layout_width="156dp"
            android:layout_height="50dp"
            android:background="@drawable/button_color_radi_vk"
            android:contentDescription="@string/vk"
            android:scaleType="centerInside"
            android:src="@drawable/iconvk" />


        <ImageButton
            android:id="@+id/buttonClassMate"
            android:layout_width="156dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_color_rad_classmate"
            android:contentDescription="@string/classmate"
            android:scaleType="centerInside"
            android:src="@drawable/iconclassmates" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
